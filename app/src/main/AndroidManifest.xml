<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.manpower.manpower">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- Permission has to be GRANTED -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".ManPowerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Views.SplashScreen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Views.MainScreen.MainActivity">
        </activity>
        <activity android:name=".Views.WorkerProfileEditor.WorkerProfileEditorActivity">
        </activity>
        <activity android:name=".Views.Login.Register.RegisterActivity">
        </activity>
        <activity android:name=".Views.Login.Register.WorkerCapabilityEditorActivity">
        </activity>
        <activity android:name=".Views.SMSAuthentication.SMSAuthentication_EnterPhoneNumber">
        </activity>
        <activity android:name=".Views.SMSAuthentication.SMSAuthentication_EnterPinNumber">
        </activity>
        <activity android:name=".Views.Review.ReviewEditorActivity">
        </activity>
    </application>

</manifest>